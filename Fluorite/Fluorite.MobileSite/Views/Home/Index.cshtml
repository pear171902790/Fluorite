<script>
    var leftShow = false;
    $(document).ready(function () {
        $("#owl-example").owlCarousel();
    });
    var windowWidth = $(window).width();
    $('div.main').css('width', (windowWidth * 166/100) +'px');
    $('div.menu').on('click', function() {
        if (leftShow) {
            window.scrollTo(1000, 0);
            leftShow = false;
        } else {
            window.scrollTo(0, 0);
            leftShow = true;
        }
    });
</script>