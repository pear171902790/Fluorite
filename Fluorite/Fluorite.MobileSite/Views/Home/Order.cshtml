@model Fluorite.MobileSite.Data.Article

@{
    Layout = "~/Views/_Layout.cshtml";
    ViewBag.Title = "优选随享";
}
<link href="~/bootstrap-3.3.6-dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/order.css" rel="stylesheet" />

<div class="header">@Model.OrderTitle</div>
<div class="header_replacement"></div>
<div class="mid">
    <img src="@Model.OrderPicUrl" />
</div>
<div class="content mid">@Model.Order</div>
<form class="form_order mid">
    <div class="form-group">
        <label>姓名</label>
        <input type="text" class="form-control" name="Name" placeholder="请问怎么称呼您？">
    </div>
    <div class="form-group">
        <label>手机号码</label>
        <input type="text" class="form-control" name="Mobile" placeholder="我们为您安排合适的时间">
    </div>
    <div class="form-group">
        <label>留言</label>
        <input type="text" class="form-control" name="Comment" placeholder="您还想了解哪些信息？感谢选择优选随享服务">
    </div>
</form>

<div class="mid">
    <input type="button" class="btn btnOrder" value="预&nbsp;&nbsp;&nbsp;&nbsp;约" />
</div>
<div class="footer">Fomind 荧石提供支持</div>
<script src="~/Content/data-getter.js"></script>

<script>
    $('.loading').hide();
    $('.main').show();

    $('.footer').on('touchend', function (event) {
        window.location.href = '@Url.Action("Self")';
    });

    var windowWidth = $(window).width();
    var setResponsiveValue = function ($obj, values, propertyNames) {
        if (propertyNames && values) {
            var finalValue = 0;
            for (var i = 0; i < propertyNames.length; i++) {
                if (values[i] !== undefined) {
                    finalValue = (values[i] * windowWidth) / 320;
                }
                $obj.css(propertyNames[i], finalValue + 'px');
            }
        }
    }
    setResponsiveValue($('.header'), [40, 40, 18], ['height', 'line-height', 'font-size']);
    setResponsiveValue($('.header_replacement'), [40], ['height']);
    setResponsiveValue($('.mid'), [8, 8], ['margin-top', 'margin-bottom']);
    setResponsiveValue($('.content'), [14], ['font-size']);
    setResponsiveValue($('.footer'), [30, 30, 14], ['height', 'line-height', 'font-size']);
    setResponsiveValue($('.btnOrder'), [18], ['font-size']);
    setResponsiveValue($('.form-group'), [15], ['margin-bottom']);
    setResponsiveValue($('.form-control'), [13, 34, 12], ['font-size', 'height', 'padding-left']);
    setResponsiveValue($('.form-group label'), [5, 14, 12], ['margin-bottom', 'font-size', 'padding-left']);
    
</script>
