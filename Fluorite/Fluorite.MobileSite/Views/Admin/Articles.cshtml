@using Fluorite.MobileSite.Data
@model dynamic
@{
    Layout = "~/Views/_AdminLayout.cshtml";
    ViewBag.Title = "商家详情";
    var articles = ViewBag.Articles as List<Article>;
}
<style>
    h1 {
        display: inline-block;
    }

    #btn_add_seller {
        float: right;
    }
</style>
<div class="panel panel-info">
    <div class="panel-heading">
        <h1 class="panel-title">文章管理</h1>
        <a href="@Url.Action("AddArticle", new { sellerId = ViewBag.SellerId as string })" class="btn btn-primary">添加文章</a>
    </div>
    <table class="table table-hover table-striped table-bordered">
        <tr>
            <th>文章标题</th>
            <th>创建时间</th>
            <th>操作</th>
        </tr>
        @if (articles != null && articles.Any())
        {
            foreach (var article in articles)
            {
                <tr>
                    <td>@article.Title</td>
                    <td>@article.CreateTime.ToShortDateString()</td>
                    <td>
                        <a href="@Url.Action("EditArticle",new {articleId=article.Id})" class="btn btn-primary">管理</a>
                        <input type="button" value="删除" class="btn btn-danger" />
                    </td>
                </tr>
            }
        }
    </table>
</div>

